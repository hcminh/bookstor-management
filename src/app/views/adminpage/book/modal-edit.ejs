<!--  Modal content for the above example -->
<div class="modal fade bs-example-modal-lg" tabindex="-1" id="edit-modal" role="dialog" aria-labelledby="edit-form"
    aria-hidden="true" style="display: none;">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header b-0">
                <h4 class="modal-title mt-0" id="edit-form">Sửa thông tin tựa sách</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            </div>
            <div class="modal-body p-0">
                <div class="card o-hidden border-0 shadow-lg my-0 py-4">
                    <!-- Nested Row within Card Body -->
                    <form class="user" id="form-edit" method="POST" action="/admin/products"
                        enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="pb-3 px-5">
                                    <div class="form-group row">
                                        <div class="col-sm-6">
                                            <label for="">Tên sách</label>
                                            <input type="text" id="edit-name" name="name" disabled
                                                class="form-control form-control-user" value="">
                                        </div>
                                        <div class="col-sm-6">
                                            <label for="">Mã sách</label>
                                            <input type="text" id="edit-bookID" name="bookID" disabled
                                                class="form-control form-control-user">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-sm-6">
                                            <label for="">Thể loại</label>
                                            <input type="text" id="edit-category" name="category"
                                            data-focus="Thể loại"
                                                class="form-control form-control-user" value="">
                                        </div>
                                        <div class="col-sm-6">
                                            <label for="">Tác giả</label>
                                            <input type="text" id="edit-author" name="author"
                                            data-focus="Tác giả"
                                                class="form-control form-control-user" value="">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-sm-12">
                                            <label for="">Đơn giá</label>
                                            <input type="text" id="edit-price" name="price"
                                            onkeypress="acceptPositiveNumber(event)"
                                            data-focus="Đơn giá"
                                                class="form-control form-control-user" value="">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="">Mô tả chi tiết sách</label>
                                        <textarea id="edit-description" name="description"
                                        data-focus="Mô tả chi tiết sách"
                                            class="form-control form-control-user"></textarea>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-sm-8"></div>
                                        <div class="col-sm-2">
                                            <button data-dismiss="modal" class="btn btn-light btn-user btn-block">
                                                Thoát
                                            </button>
                                        </div>
                                        <div class="col-sm-2">
                                            <button type="submit" class="btn btn-primary btn-user btn-block">
                                                Lưu
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                    <!-- end row -->
                </div>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->