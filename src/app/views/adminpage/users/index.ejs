<!DOCTYPE html>
<html lang="en">

<head>
  <% include ../partials/head %>

</head>

<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper">

    <!-- Sidebar -->
    <% include ../partials/side-bar %>
    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <!-- Topbar -->
        <% include ../partials/navbar %>
        <!-- End of Topbar -->

        <!-- Begin Page Content -->
        <div class="container-fluid">

          <!-- Page Heading -->
          <h1 class="h3 mb-2 text-gray-800">Tables</h1>
          <p class="mb-4">DataTables is a third party plugin that is used to generate the demo table below. For more information about DataTables, please visit the <a target="_blank" href="https://datatables.net">official DataTables documentation</a>.</p>

          <!-- DataTales Example -->
          <div class="card shadow mb-4">
            <div class="card-header text-right">
              <a href="/admin/customers/create" class="btn btn-primary">Add new Customers</a>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                    <tr>
                      <th>Name</th>
                      <th>Roles</th>
                      <th>Total</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                  <% if(typeof users != 'undefined') { %>
                  <% users.forEach(item => { %> 
                     <tr>
                      <td><%- item.fullname %></td>
                      <td><%- item.roles %></td>
                      <td><%- item.total %></td>
                      <td class="text-center">
                        <a href="/admin/users/<%- item._id %>/view" class="btn btn-outline-success"><i class="fas fa-eye"></i></a>
                        <a href="/admin/users/<%- item._id %>/edit" class="btn btn-outline-warning"><i class="fas fa-edit"></i></a>
                        <button class="btn btn-outline-danger" data-toggle="modal" data-target="deleteUsersModal" onclick="selectedId('<%- item._id %>')"><i class="fas fa-trash"></i></button>
                      </td>
                    </tr>
                    <% }) } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>

        </div>
        <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->

      <!-- Footer -->
      <% include ../partials/footer %>
      <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>

    <!-- Delete Modal-->
    <% include ./modal-delete %>
    <!-- Logout Modal-->
    <% include ../partials/modal-logout %>
    <!-- Scripts-->
    <% include ../partials/scripts %>
    <script>
      var selectedId = '';
    </script>
    <script>
      function selectedId(id) {
        selectedId = id;
      }
      function deleteUsers() {
        $.ajax({
          method: 'DELETE',
          url: `/admin/users/${selectedId}/delete`,
          success: function() {
            location.reload();
          },
          error: function() {

          }
        })
      }
    </script>
</body>

</html>
