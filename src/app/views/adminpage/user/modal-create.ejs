<!--  Modal content for the above example -->
<div class="modal fade bs-example-modal-lg" tabindex="-1" id="modal-create" role="dialog" aria-labelledby="create-form"
  aria-hidden="true" style="display: none;">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header b-0">
        <h4 class="modal-title mt-0" id="create-form">Tạo tài khoản cho nhân viên</h4>
        <button type="button" onclick="cancelInput(event)" class="close" data-dismiss="modal"
          aria-hidden="true">×</button>
      </div>
      <div class="modal-body p-0">
        <div class="card o-hidden border-0 shadow-lg my-0 py-4">
          <!-- Nested Row within Card Body -->
          <form class="user" id="form-create" method="POST" action="/admin/user/create">
            <div class="row">
              <div class="col-lg-12">
                <div class="pb-3 px-5">

                  <div class="form-group row">
                    <div class="col-sm-6">
                      <label for="">Tài khoản</label>
                      <input type="text" name="username" class="form-control form-control-user"
                        data-focus="Tài khoản nhân viên" placeholder="username">
                    </div>
                    <div class="col-sm-6">
                      <label for="">Mật khẩu</label>
                      <input type="password" name="password" class="form-control form-control-user" data-focus="Mật khẩu"
                        placeholder="********">
                    </div>
                  </div>
                  <div class="form-group row">
                    <div class="col-sm-6">
                      <label for="">Họ tên</label>
                      <input type="text" name="fullname" class="form-control form-control-user"
                        data-focus="Họ tên nhân viên" placeholder="Hoàng Công A">
                    </div>
                    <div class="col-sm-6">
                      <label for="">Phân quyền</label>
                      <select name="roles" class="form-control form-control-user" data-focus="Phân quyền nhân viên">
                        <option value="">Chưa chọn phân quyền</option>
                        <option value="WAREHOUSE_MANAGER">Quản lý Kho</option>
                        <option value="EMPLOYEE_MANAGER">Quản lý Nhân viên</option>
                        <option value="CUSTOMER_MANAGER">Quản lý Khách hàng</option>
                        <option value="WAREHOUSE_STAFF">Nhân viên nhập kho</option>
                        <option value="SALESMAN">Nhân viên Bán hàng</option>
                      </select>

                    </div>
                  </div>
                  <div class="form-group row">
                    <div class="col-sm-8"></div>
                    <div class="col-sm-2">
                      <button type="reset" class="btn btn-light btn-user btn-block">
                        Nhập lại
                      </button>
                    </div>
                    <div class="col-sm-2">
                      <button type="submit" class="btn btn-primary btn-user btn-block">
                        Lưu
                      </button>
                    </div>
                  </div>


                </div>
              </div>
            </div>
          </form>
          <!-- end row -->
        </div>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->