<!--  Modal content for the above example -->
<div class="modal fade bs-example-modal-lg" tabindex="-1" id="edit-modal" role="dialog" aria-labelledby="edit-form"
    aria-hidden="true" style="display: none;">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header b-0">
                <h4 class="modal-title mt-0" id="edit-form">Sửa thông tin tựa sách</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            </div>
            <div class="modal-body p-0">
                <div class="card o-hidden border-0 shadow-lg my-0 py-4">
                    <!-- Nested Row within Card Body -->
                    <form class="user" id="form-edit" method="POST" action="/admin/products"
                        enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="pb-3 px-5">
                                    <div class="form-group row">
                                        <div class="col-sm-6">
                                            <label for="">Tài khoản</label>
                                            <input type="text" id="edit-username" disabled
                                                class="form-control form-control-user" value="">
                                        </div>
                                        <div class="col-sm-6">
                                            <label for="">Họ tên</label>
                                            <input type="text" id="edit-fullname" name="fullname" data-focus="Họ tên nhân viên"
                                                class="form-control form-control-user" value="">
                                        </div>
                                        </div>
                                        <div class="form-group row">
                                        <div class="col-sm-6">
                                            <label for="">Mã nhân viên</label>
                                            <input type="text" id="edit-userID" 
                                                disabled
                                                class="form-control form-control-user" value="">
                                        </div>
                                        <div class="col-sm-6">
                                            <label for="">Phân quyền</label>
                                            <select name="roles" id="edit-roles" class="form-control form-control-user"
                                                data-focus="Phân quyền cho nhân viên">
                                                <option value="">Chưa chọn phân quyền</option>
                                                <option value="WAREHOUSE_MANAGER">Quản lý Kho</option>
                                                <option value="EMPLOYEE_MANAGER">Quản lý Nhân viên</option>
                                                <option value="CUSTOMER_MANAGER">Quản lý Khách hàng</option>
                                                <option value="WAREHOUSE_STAFF">Nhân viên nhập kho</option>
                                                <option value="SALESMAN">Nhân viên Bán hàng</option>
                                            </select>
                                        </div>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-sm-7"></div>
                                        <div class="col-sm-2">
                                            <button data-dismiss="modal" class="btn btn-light btn-user btn-block">
                                                Thoát
                                            </button>
                                        </div>
                                        <div class="col-sm-2">
                                            <button type="submit" class="btn btn-primary btn-user btn-block">
                                                Lưu
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                    <!-- end row -->
                </div>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->