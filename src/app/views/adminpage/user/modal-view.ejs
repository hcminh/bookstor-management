                          <label id="label-userID" class="form-control form-control-user"></label>
                        </div>
                      </div>
                      <div class="form-group row">
                        <div class="col-sm-6">
                            <label for="">Họ tên</label>
                          <label id="label-fullname" class="form-control form-control-user"></label>
                        </div>
                        <div class="col-sm-6">
                            <label for="">Phân quyền</label>
                          <label id="label-roles" class="form-control form-control-user"></label>
                        </div>
                      </div>
                      <div class="form-group row">
                        <div class="col-sm-10"></div>
                        <div class="col-sm-2">
                          <button data-dismiss="modal" class="btn btn-primary btn-user btn-block">
                            Close
                          </button>
                        </div>
                      </div>


                    </div>
                  </div>
                </div>
              <!-- end row -->
          </div>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
