  <script>
    var selectedId = '';
  </script>
  <script>
    function getID(id) {
      selectedId = id;
    }


    /*
    Code để tạo loại tài khoản khách hàng - đầu
    */
    let inputTypeName = $('input[name="typeName"]');
    let inputDescription = $('textarea[name="description"]');
    let inputDiscount = $('input[name="discount"]');
    let inputTypeID = $('input[name="typeID"]');
    let inputMinPaid = $('input[name="minPaid"]');

    function CheckValideDataToCreate() {
      let array = [inputTypeName, inputDescription, inputDiscount, inputTypeID, inputMinPaid]
      return (CheckValidate(array));
    }

    $('#form-create').on('submit', (function (e) {
      let validate = CheckValideDataToCreate();
      if (validate.err) {
        e.preventDefault();
        alert("Yêu cầu nhập " + validate.message);
        return false;
      }
    }));

    /*
    Code để tạo mới tài khoản khách hàng - đuôi
    */




    /*
    Code để sửa thông tin tài khoản khách hàng - đầu
    */

    let typeNameEditInput = $('#editInput-typeName');
    let descriptionEditInput = $('#editInput-description');
    let discountEditInput = $('#editInput-discount');
    let typeIDEditInput = $('#editInput-typeID');
    let minPaidEditInput = $('#editInput-minPaid');
    let formEdit = $('#form-edit');

    function addDataToEditModal(type) {
      formEdit.attr('action', `/admin/customerType/info/${type._id}`);
      typeNameEditInput.val(type.typeName)
      descriptionEditInput.val(type.description)
      discountEditInput.val(type.discount)
      typeID.val(type.typeID)
      minPaid.val(type.minPaid)
    }

    function CheckValideDataToEdit() {
      let array = [typeNameEditInput, descriptionEditInput, discountEditInput]
      return (CheckValidate(array));
    }

    $('#form-edit').on('submit', (function (e) {
      let validate = CheckValideDataToEdit();
      if (validate.err) {
        e.preventDefault();
        alert("Yêu cầu nhập " + validate.message);
        return false;
      }
    }));

    /*
    Code để sửa thông tin tài khoản khách hàng - đuôi
    */



    /*
    Code để xem thông tin tài khoản khách hàng - đầu
    */
    let typeNameLabel = $('#label-typeName');
    let descriptionLabel = $('#label-description');
    let discountLabel = $('#label-discount');
    let typeIDLabel = $('#label-typeID');
    let minPaidLabel = $('#label-minPaid');

    function addDataToViewModal(type) {
      typeNameLabel.text(type.typeName)
      descriptionLabel.text(type.description)
      discountLabel.text(type.discount)
      typeIDLabel.text(type.typeID)
      minPaidLabel.text(type.minPaid)
    }



    function getTypeInfo(id) {
      $.getJSON(`/admin/customerType/info/${id}`, function (data) {
        addDataToViewModal(data);
        addDataToEditModal(data);
      });
    }

    /*
    Code để xem thông tin tài khoản khách hàng - đuôi
    */



    /*
    Code kiểm tra thông tin tài khoản khách hàng - đầu
    */
    function CheckValidate(listInput) {
      listInput.forEach(element => {
        element.css("border-color", "#E3E3E3");
      });
      for (let element of listInput) {
        if (element.val() == "") {
          element.focus();
          element.css("border-color", "red")
          return { err: true, message: element.attr('data-focus') };
        }
      }
      return { err: false };
    }



    /*
    Code để kiểm tra thông tin tài khoản khách hàng - đuôi
    */


    /*
    Code để XÓA thông tin tài khoản khách hàng - đuôi
    */

    function deleteType() {
      $.ajax({
        method: 'DELETE',
        url: `/admin/customerType/info/${selectedId}`,
        success: function (idDeleted) {
          alert("Xóa thông tin loại khách hàng thành công");
          location.reload();
        },
        error: function (err) {
          alert(err.responseJSON)
        }
      })
    }

    /*
    Code để XÓA thông tin tài khoản khách hàng - đuôi
    */



    function emptyInput() {
      inputFullname.val('');
      inputPhone.val('');
      inputIdCode.val('');
      inputAddress.val('');
      inputEmail.val('');
      inputBirth.val('');

    }

    function cancelInput(event) {
      event.preventDefault();
      emptyInput();
    }


    function reLoadPage(){
      location.replace('/admin/customerType');
    }




  </script>
